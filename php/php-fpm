FROM php:8.1-fpm

# 替换为阿里云镜像源（国内用户推荐）
RUN { \
    echo "deb http://mirrors.aliyun.com/debian/ bookworm main"; \
    echo "deb http://mirrors.aliyun.com/debian-security/ bookworm-security main"; \
    } > /etc/apt/sources.list && \
    rm -rf /etc/apt/sources.list.d/*

# 安装系统依赖和工具
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    git \
    unzip \
    libzip-dev \
    libpng-dev \
    libjpeg-dev \
    libfreetype6-dev \
    libssl-dev \
    libwebp-dev \
    libxml2-dev \
    libpq-dev \
    && rm -rf /var/lib/apt/lists/*

# 安装 PHP 扩展
RUN docker-php-ext-configure gd --with-freetype --with-jpeg --with-webp && \
    docker-php-ext-install -j$(nproc) \
    bcmath \
    exif \
    gd \
    mysqli \
    pdo_mysql \
    pdo_pgsql \
    pcntl \
    soap \
    sockets \
    zip \
    opcache

# 安装 Redis 扩展
RUN pecl install -o -f redis && \
    docker-php-ext-enable redis && \
    rm -rf /tmp/pear

# 安装 Composer（使用中国镜像）
RUN curl -sS https://mirrors.aliyun.com/composer/composer.phar -o /usr/local/bin/composer && \
    chmod +x /usr/local/bin/composer && \
    composer config -g repo.packagist composer https://mirrors.aliyun.com/composer/



